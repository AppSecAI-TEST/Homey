<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.activities.AddGroupActivity">

    <Button
        android:id="@+id/buttonAddGroupSubmit"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="buttonAddGroup_onClick"
        android:text="Add Group"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="427dp" />

    <EditText
        android:id="@+id/editTextImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="img"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteY="35dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextImg"
        android:layout_alignStart="@+id/editTextImg" />

    <include
        layout="@layout/navigation"
        android:layout_height="match_parent"
        android:layout_width="match_parent"></include>

</RelativeLayout>
