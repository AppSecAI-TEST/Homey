<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.activities.ProfileActivity">


    <LinearLayout
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/header" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/imageButtonUsersProfilePicture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:contentDescription="@string/profile_picture"
                app:srcCompat="@drawable/profilepicturetest" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:isScrollContainer="false">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUserNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="0dp"
                    android:layout_row="1"
                    android:padding="@dimen/text_margin"
                    android:text="@string/user_name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewUserNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="0dp"
                    android:layout_row="1"
                    android:ems="10"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="0dp"
                    android:layout_row="2"
                    android:padding="@dimen/text_margin"
                    android:text="@string/email"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewEmailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="0dp"
                    android:layout_row="2"
                    android:ems="10"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewFirstNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="0dp"
                    android:layout_row="3"
                    android:padding="@dimen/text_margin"
                    android:text="@string/first_name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewFirstNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="0dp"
                    android:layout_row="3"
                    android:ems="10"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewLastNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="0dp"
                    android:layout_row="4"
                    android:ems="10"
                    android:padding="@dimen/text_margin"
                    android:text="@string/last_name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewLastNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="0dp"
                    android:layout_row="4"
                    android:ems="10"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDateOfBirthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="0dp"
                    android:layout_row="5"
                    android:ems="10"
                    android:padding="@dimen/text_margin"
                    android:text="@string/date_of_birth"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDateOfBirthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginTop="0dp"
                    android:layout_row="5"
                    android:ems="10"
                    android:text=""
                    android:textSize="12sp" />


            </GridLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonProfileActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|left"
        android:layout_margin="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:onClick="editButton_onClick"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_anchor="@+id/activity_profile"
        app:layout_anchorGravity="center_vertical|right"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</android.support.design.widget.CoordinatorLayout>