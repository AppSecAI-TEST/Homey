<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FragmentAddMember"
    android:id="@+id/AddMemberFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spinnerAddMemberGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/buttonAddMemberFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_member"
                android:background="@color/light_gray"
                android:onClick="onAddMemberClicked"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <app.customcomponents.CircleImageButton
                android:id="@+id/imageViewAddMember"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/Transparent"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
